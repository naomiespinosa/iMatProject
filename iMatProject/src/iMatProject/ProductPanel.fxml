<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<fx:root id="productPane" prefHeight="218.0" prefWidth="190.0" style="-fx-background-color: #ffffff;" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="imageView" fitHeight="115.0" fitWidth="142.0" layoutX="6.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="nameLabel" layoutX="9.0" layoutY="126.0" text="name">
         <font>
            <Font size="14.0" />
         </font></Label>
      <Label fx:id="prizeLabel" layoutX="9.0" layoutY="157.0" text="price">
         <font>
            <Font size="14.0" />
         </font></Label>
      <Label fx:id="ecoLabel" layoutX="9.0" layoutY="183.0" text="eco" textFill="#009a1c">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
      <Button layoutX="143.0" layoutY="126.0" mnemonicParsing="false" onAction="#handleAddAction" prefHeight="36.0" prefWidth="36.0" style="-fx-background-radius: 25; -fx-background-color: #4C1036;" text="+" textAlignment="CENTER" textFill="WHITE" wrapText="true">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
         <tooltip>
            <Tooltip text="Lägg ett stycke i varukorgen" />
         </tooltip></Button>
      <Button layoutX="143.0" layoutY="172.0" mnemonicParsing="false" onAction="#handleRemoveAction" prefHeight="36.0" prefWidth="36.0" style="-fx-background-radius: 25; -fx-background-color: #4C1036;" text="-" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
         <tooltip>
            <Tooltip text="Ta bort ett stycke från varukorgen" />
         </tooltip></Button>
      <Button id="favorite" fx:id="favoritsButton" layoutX="160.0" layoutY="8.0" mnemonicParsing="false" onAction="#addFavoritesAction" prefHeight="31.0" prefWidth="26.0" style="-fx-background-radius: 25;" textAlignment="CENTER" textFill="WHITE" wrapText="true">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font>
         <tooltip>
            <Tooltip text="Lägg till i favoriter" />
         </tooltip>
      </Button>
   </children>
</fx:root>
